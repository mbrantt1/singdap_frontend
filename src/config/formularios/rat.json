                        {
                            "id": "ses",
                            "nombre": "SES"
                        },
                        {
                            "id": "sss",
                            "nombre": "SSS"
                        },
                        {
                            "id": "sn",
                            "nombre": "SN"
                        }
                    ],
                    "required": true
                },
