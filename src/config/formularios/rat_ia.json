{
    "endpoint": "/rat",
    "id_field": "id",
    "title_new": "RAT_IA - Nuevo Registro",
    "title_edit": "RAT_IA - Editar Registro",
    "width": 1250,
    "height": 800,
    "sections": [
        {
            "title": "0. Gobierno de Datos",
            "description": "Metadatos del documento RAT.",
            "fields": [
                {
                    "key": "fecha_elaboracion",
                    "label": "Fecha de elaboración",
                    "type": "text",
                    "control": "calendar",
                    "required": true
                },
                {
                    "key": "responsable_informe",
                    "label": "Responsable del Informe",
                    "type": "text",
                    "required": true
                },
                {
                    "key": "equipo_entrevistados",
                    "label": "Equipo de entrevistados",
                    "type": "text",
                    "required": true
                },
                {
                    "key": "equipo_validacion",
                    "label": "Equipo de validación de contenidos",
                    "type": "text",
                    "required": true
                },
                {
                    "key": "revision_aprobacion",
                    "label": "Revisión y aprobación final",
                    "type": "text",
                    "required": true
                }
            ]
        },
        {
            "title": "1. Identificación general del tratamiento",
            "description": "Antecedentes principales para individualizar el tratamiento y sus responsables.",
            "fields": [
                {
                    "key": "nombre_tratamiento",
                    "label": "Nombre del tratamiento",
                    "description": "Ingrese denominación del tratamiento de datos personales.",
                    "type": "text",
                    "required": true
                },
                {
                    "key": "tipo_tratamiento",
                    "label": "Tipo de tratamiento",
                    "description": "Seleccione el tipo de tratamiento (seleccione solo 1 de las opciones)",
                    "type": "combo_static",
                    "options": [
                        {
                            "id": "proceso_institucional",
                            "nombre": "Proceso institucional"
                        },
                        {
                            "id": "iniciativa_ia",
                            "nombre": "Iniciativa de IA"
                        },
                        {
                            "id": "gestion_rrhh",
                            "nombre": "Gestión RRHH"
                        },
                        {
                            "id": "sistema",
                            "nombre": "Sistema"
                        },
                        {
                            "id": "proyecto",
                            "nombre": "Proyecto"
                        },
                        {
                            "id": "nomina",
                            "nombre": "Nómina"
                        },
                        {
                            "id": "otra",
                            "nombre": "Otra (especifique)"
                        }
                    ],
                    "required": true
                },
                {
                    "key": "subsecretaria",
                    "label": "Subsecretaria",
                    "description": "Seleccione la unidad responsable.",
                    "type": "combo_static",
                    "options": [
                        {
                            "id": "ses",
                            "nombre": "SES"
                        },
                        {
                            "id": "sss",
                            "nombre": "SSS"
                        },
                        {
                            "id": "sn",
                            "nombre": "SN"
                        }
                    ],
                    "required": true
                },
                {
                    "key": "division",
                    "label": "División",
                    "type": "combo",
                    "source": "/setup/divisiones",
                    "depends_on": "subsecretaria",
                    "dependency_endpoint_template": "/setup/divisiones?subsecretaria_id={value}",
                    "triggers_reload": [
                        "departamento"
                    ],
                    "required": true
                },
                {
                    "key": "departamento",
                    "label": "Departamento",
                    "type": "combo",
                    "source": "/setup/departamentos",
                    "depends_on": "division",
                    "dependency_endpoint_template": "/setup/departamentos?division_id={value}",
                    "required": true
                },
                {
                    "key": "nombre_responsable",
                    "label": "Nombre Responsable del tratamiento",
                    "description": "Indique 1 encargado (persona y datos de contacto).",
                    "type": "text",
                    "required": true
                },
                {
                    "key": "cargo_responsable",
                    "label": "Cargo responsable del tratamiento",
                    "type": "text",
                    "required": true
                },
                {
                    "key": "email_responsable",
                    "label": "Email responsable del tratamiento",
                    "type": "text",
                    "required": true
                },
                {
                    "key": "telefono_responsable",
                    "label": "Teléfono responsable del tratamiento",
                    "type": "text",
                    "required": true
                },
                {
                    "key": "nombre_encargado",
                    "label": "Nombre Encargado(s) del tratamiento",
                    "description": "Indique 1 o más encargados (personas/unidades) según corresponda.",
                    "type": "text",
                    "required": true
                },
                {
                    "key": "cargo_encargado",
                    "label": "Cargo encargado del tratamiento",
                    "type": "text",
                    "required": true
                },
                {
                    "key": "email_encargado",
                    "label": "Email encargado del tratamiento",
                    "type": "text",
                    "required": true
                },
                {
                    "key": "telefono_encargado",
                    "label": "Telefono encargado del tratamiento",
                    "type": "text",
                    "required": true
                }
            ]
        },
        {
            "title": "2. Finalidad y alcance del uso de IA",
            "description": "Detalle de finalidad, alcance y efectos de la IA.",
            "fields": [
                {
                    "key": "finalidad_principal_ia",
                    "label": "Finalidad principal del uso de IA",
                    "description": "Describe el objetivo público específico que justifica el uso de IA, indicando el problema que se busca resolver.",
                    "type": "textarea",
                    "required": true
                },
                {
                    "key": "tipo_tarea_ia",
                    "label": "Tipo de tarea realizada por la IA",
                    "description": "Indique el tipo de funcionalidad que cumple la IA.",
                    "type": "combo_static",
                    "options": [
                        {
                            "id": "clasificacion",
                            "nombre": "Clasificación"
                        },
                        {
                            "id": "prediccion",
                            "nombre": "Predicción"
                        },
                        {
                            "id": "recomendacion",
                            "nombre": "Recomendación"
                        },
                        {
                            "id": "analisis_texto",
                            "nombre": "Análisis de texto"
                        },
                        {
                            "id": "generacion_contenido",
                            "nombre": "Generación de contenido"
                        }
                    ],
                    "required": true
                },
                {
                    "key": "alcance_impacto_ia",
                    "label": "Alcance del impacto",
                    "description": "Señale si el uso de IA impacta a...",
                    "type": "combo_static",
                    "options": [
                        {
                            "id": "apoyo_procesos",
                            "nombre": "Apoyo a procesos internos"
                        },
                        {
                            "id": "apoya_decisiones",
                            "nombre": "Apoya decisiones humanas"
                        },
                        {
                            "id": "efectos_directos",
                            "nombre": "Produce efectos directos sobre personas"
                        }
                    ],
                    "required": true
                },
                {
                    "key": "efectos_juridicos_ia",
                    "label": "Efectos jurídicos o significativos",
                    "description": "Indique si la IA produce decisiones automatizadas o recomendaciones que afecten derechos, beneficios, obligaciones o acceso a prestaciones.",
                    "type": "textarea",
                    "required": true
                }
            ]
        },
        {
            "title": "3. Descripción general del flujo IA",
            "description": "Resumen del flujo técnico y puntos de control humano.",
            "fields": [
                {
                    "key": "descripcion_resumida_flujo_ia",
                    "label": "Descripción resumida del flujo",
                    "description": "Explique de forma simple el flujo completo: desde la entrada de datos, procesamiento por el modelo, generación del resultado y su uso final.",
                    "type": "textarea",
                    "required": true
                },
                {
                    "key": "puntos_intervencion_ia",
                    "label": "Puntos de intervención humana",
                    "description": "Identifique en qué etapas existe revisión, validación o decisión humana antes o después de la IA.",
                    "type": "textarea",
                    "required": true
                },
                {
                    "key": "sistemas_repositorios_ia",
                    "label": "Sistemas y repositorios involucrados",
                    "description": "Indique los sistemas, bases de datos, repositorios o servicios que participan en el flujo de la IA.",
                    "type": "textarea",
                    "required": true
                }
            ]
        },
        {
            "title": "4. Datos de entrenamiento del modelo",
            "description": "Origen, licitud y caracterización del dataset utilizado.",
            "fields": [
                {
                    "key": "fuente_datos_entrenamiento_ia",
                    "label": "Fuente(s) de los datos de entrenamiento",
                    "description": "Identifique el origen de los datos usados para entrenar el modelo (bases internas, otros servicios, datos públicos, terceros).",
                    "type": "textarea",
                    "required": true
                },
                {
                    "key": "base_licitud_entrenamiento_ia",
                    "label": "Base de licitud",
                    "description": "Indique la habilitación legal que permite usar estos datos para entrenamiento (función pública, obligación legal, convenio, etc.).",
                    "type": "textarea",
                    "required": true
                },
                {
                    "key": "restricciones_uso_ia",
                    "label": "Restricciones de uso",
                    "description": "Señale limitaciones contractuales, licencias, convenios o restricciones que afecten el uso de los datos para entrenamiento.",
                    "type": "textarea",
                    "required": true
                },
                {
                    "key": "categorias_datos_entrenamiento_ia",
                    "label": "Categorías de datos personales",
                    "description": "Indique qué tipos de datos personales contiene el dataset de entrenamiento.",
                    "type": "textarea",
                    "required": true
                },
                {
                    "key": "datos_sensibles_entrenamiento_ia",
                    "label": "Datos sensibles",
                    "description": "Señale si el dataset contiene datos sensibles o categorías especiales y cuáles.",
                    "type": "textarea",
                    "required": true
                },
                {
                    "key": "volumen_periodo_ia",
                    "label": "Volumen y periodo",
                    "description": "Indique el tamaño aproximado del dataset, rango temporal y frecuencia de actualización.",
                    "type": "textarea",
                    "required": true
                },
                {
                    "key": "poblaciones_vulnerables_entrenamiento_ia",
                    "label": "Poblaciones especiales",
                    "description": "Identifique si el dataset incluye datos de NNA u otros grupos especialmente protegidos.",
                    "type": "textarea",
                    "required": true
                }
            ]
        },
        {
            "title": "5. Datos operacionales del aplicativo IA",
            "description": "Inputs, outputs y monitoreo en operación.",
            "fields": [
                {
                    "key": "datos_entrada_ia",
                    "label": "Datos de entrada (inputs)",
                    "description": "Describa los datos que el sistema IA utiliza en operación para generar resultados.",
                    "type": "textarea",
                    "required": true
                },
                {
                    "key": "datos_salida_ia",
                    "label": "Datos de salida (outputs)",
                    "description": "Indique qué tipo de resultados produce la IA.",
                    "type": "combo_static",
                    "options": [
                        {
                            "id": "score",
                            "nombre": "Score"
                        },
                        {
                            "id": "clasificacion",
                            "nombre": "Clasificación"
                        },
                        {
                            "id": "recomendacion",
                            "nombre": "Recomendación"
                        },
                        {
                            "id": "texto",
                            "nombre": "Texto"
                        },
                        {
                            "id": "alerta",
                            "nombre": "Alerta"
                        }
                    ],
                    "required": true
                },
                {
                    "key": "monitoreo_modelo_ia",
                    "label": "Monitoreo del modelo",
                    "description": "Indique si y cómo se monitorea desempeño, sesgo, errores o degradación del modelo y con qué frecuencia.",
                    "type": "textarea",
                    "required": true
                }
            ]
        },
        {
            "title": "6. Modelo y operación",
            "description": "Aspectos técnicos del modelo y su entorno de ejecución.",
            "fields": [
                {
                    "key": "tipo_modelo_ia",
                    "label": "Tipo de modelo",
                    "description": "Indique el tipo de modelo(s) o tecnología utilizada.",
                    "type": "combo_static",
                    "options": [
                        {
                            "id": "ml_clasico",
                            "nombre": "ML clásico"
                        },
                        {
                            "id": "redes_neuronales",
                            "nombre": "Redes neuronales"
                        },
                        {
                            "id": "llm",
                            "nombre": "LLM"
                        }
                    ],
                    "required": true
                },
                {
                    "key": "modalidad_entrenamiento_ia",
                    "label": "Modalidad de entrenamiento",
                    "description": "Señale si el modelo es entrenado internamente, por un tercero o consumido como servicio.",
                    "type": "textarea",
                    "required": true
                },
                {
                    "key": "infraestructura_ejecucion_ia",
                    "label": "Infraestructura de ejecución",
                    "description": "Indique dónde se ejecuta el modelo (infraestructura institucional, nube, proveedor externo).",
                    "type": "textarea",
                    "required": true
                },
                {
                    "key": "reentrenamiento_ia",
                    "label": "Reentrenamiento",
                    "description": "Describa la frecuencia, condiciones o eventos que gatillan el reentrenamiento del modelo.",
                    "type": "textarea",
                    "required": true
                },
                {
                    "key": "controles_acceso_ia",
                    "label": "Controles de acceso",
                    "description": "Indique roles y perfiles con acceso al modelo y a sus resultados.",
                    "type": "textarea",
                    "required": true
                }
            ]
        },
        {
            "title": "7. Explicabilidad y decisiones automatizadas",
            "description": "Transparencia, lógica y documentación de respaldo.",
            "fields": [
                {
                    "key": "explicacion_logica_ia",
                    "label": "Explicación de la lógica aplicada",
                    "description": "Describa, en lenguaje claro, cómo funciona la IA y qué factores influyen en sus resultados.",
                    "type": "textarea",
                    "required": true
                },
                {
                    "key": "variables_relevantes_ia",
                    "label": "Variables relevantes",
                    "description": "Identifique las principales variables o criterios utilizados por el modelo, cuando sea posible.",
                    "type": "textarea",
                    "required": true
                },
                {
                    "key": "intervencion_humana_ia",
                    "label": "Intervención humana y revisión",
                    "description": "Indique si existe revisión humana, posibilidad de impugnar decisiones o corregir resultados.",
                    "type": "textarea",
                    "required": true
                },
                {
                    "key": "documentacion_explicabilidad_ia",
                    "label": "Documentación de explicabilidad",
                    "description": "Señale qué documentos o mecanismos respaldan la explicabilidad (ficha del modelo, reportes, ejemplos).",
                    "type": "file",
                    "required": true
                }
            ]
        }
    ]
}